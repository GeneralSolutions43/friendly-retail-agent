FROM node:20-slim

WORKDIR /app

# Install dependencies including devDependencies
COPY package.json package-lock.json ./
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3002

# Run in development mode (attempting to disable turbopack if it is default, or just run dev)
CMD ["npm", "run", "dev", "--", "--turbo=false"]
